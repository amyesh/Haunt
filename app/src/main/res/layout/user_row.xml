<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/browse_users_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/name_user_profile"
            android:textSize="30sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/browse_users_image"
                android:layout_width="match_parent"
                android:maxHeight="450dp"
                android:layout_height="wrap_content"
                android:contentDescription="@string/user_profile_picture_desc"
                android:src="@android:color/transparent"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                android:padding="5dp"
                android:cropToPadding="true"
                android:orientation="horizontal"
                android:layout_alignBottom="@id/browse_users_image">

                <ImageView
                    android:id="@+id/dislike_user"
                    android:layout_width="53dp"
                    android:layout_height="53dp"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:contentDescription="@string/dislike_user_button_desc"
                    android:src="@drawable/dislike_button_large" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="90" />

                <ImageView
                    android:id="@+id/like_user"
                    android:layout_width="53dp"
                    android:layout_height="53dp"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:contentDescription="@string/like_user_button_desc"
                    android:focusable="true" />

            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:paddingStart="10dp"
                android:paddingBottom="2dp"
                android:src="@drawable/ic_adjust_black_24dp"
                android:layout_gravity="bottom" />

            <TextView
                android:id="@+id/browse_users_sun_sign"
                android:paddingStart="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/astro_sun"
                android:textSize="16sp"
                android:layout_gravity="bottom" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:src="@drawable/ic_moon_black_24dp"
                android:paddingBottom="2dp"
                android:layout_gravity="bottom"
                android:paddingStart="9dp"/>

            <TextView
                android:id="@+id/browse_users_moon_sign"
                android:paddingStart="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/astro_moon"
                android:textSize="16sp"
                android:layout_gravity="bottom" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:src="@drawable/ic_rising_black_24dp"
                android:layout_gravity="bottom"
                android:paddingStart="10dp"/>

            <TextView
                android:id="@+id/browse_users_rising_sign"
                android:paddingStart="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/astro_rising"
                android:textSize="16sp"
                android:layout_gravity="bottom" />

        </LinearLayout>

        <TextView
            android:id="@+id/browse_users_blurb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="35dp"
            android:paddingStart="33dp"
            android:paddingEnd="33dp"
            android:paddingBottom="70dp"
            android:textSize="20sp"
            android:fontFamily="@font/apercu_italic"
            android:text="@string/users_blurb" />
    </LinearLayout>

</androidx.cardview.widget.CardView>


