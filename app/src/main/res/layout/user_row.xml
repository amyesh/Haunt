<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/browse_users_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="30sp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/browse_users_image"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:src="@drawable/ic_launcher_background"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/browse_users_sign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/astro_signs"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/browse_users_blurb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:gravity="center_horizontal"

            android:text="@string/users_blurb"
            android:textSize="18sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/browse_users_compat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:gravity="center_horizontal"
            android:text="@string/users_compat"
            android:textSize="18sp"
            android:textStyle="italic"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>